{
	"name": "svelte-ecom",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "oxlint .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"prepare": "husky",
		"check:all": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && oxlint . && biome format .",
		"stripe:listen": "stripe listen --forward-to http://localhost:5173/api/stripe",
		"email:dev": "email dev --dir src/lib/emails",
		"ultra:init": "bunx ultracite init",
		"ultra:check": "bunx ultracite check",
		"ultra:fix": "bunx ultracite fix"
	},
